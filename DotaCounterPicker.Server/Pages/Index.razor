@page "/"
@using Blazored.Modal.Services
@inject IJSRuntime JS
@inject IModalService modal
<PageTitle>Index</PageTitle>



<h1>Hello, world!</h1>

Welcome to your new app.




<button @onclick="Show" class="btn btn-primary">Pick hero</button>

@code{

    private async Task Show()
    {
        var modalReference = modal.Show<HeroPicker>("Modal Popup Example", new Blazored.Modal.ModalOptions(){Size=Blazored.Modal.ModalSize.Large});
        var res = await modalReference.Result;
    }

}