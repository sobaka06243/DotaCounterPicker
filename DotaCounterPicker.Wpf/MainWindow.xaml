<Window x:Class="DotaCounterPicker.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DotaCounterPicker.Wpf"
        xmlns:viewmodel="clr-namespace:DotaCounterPicker.MVVM.ViewModels;assembly=DotaCounterPicker.MVVM" 
        xmlns:usercontrols="clr-namespace:DotaCounterPicker.Wpf.UserControls"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <DataTemplate DataType="{x:Type viewmodel:HeroPickerViewModel}">
            <usercontrols:HeroPickerUserControl/>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <usercontrols:MainUserControl Grid.Row="0" />
        <ContentPresenter x:Name="container" Grid.Row="1" />
    </Grid>
</Window>
